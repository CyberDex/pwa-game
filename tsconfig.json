{
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist/",
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": ["ESNext", "DOM"],
        "moduleResolution": "Node",
        "strict": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "inlineSources": true,
        "sourceRoot": "/",
        "paths": {
            "plugins/*": ["src/plugins/src/*"]
        }
    },
    "include": ["src/**/*"]
}
